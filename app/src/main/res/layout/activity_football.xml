<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_football"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vicky.courtside.football"
    android:background="@color/colorPrimary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="850dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/imageButton7"
            android:alpha="0.6"
            android:background="@drawable/pp"
            android:layout_below="@+id/imageButton9"
            android:layout_alignParentStart="true"
            android:layout_marginTop="27dp"
            android:onClick="pp" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/imageButton8"
            android:background="@drawable/tf"
            android:alpha="0.6"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/imageButton"
            android:layout_alignParentStart="true"
            android:onClick="xl" />

        <TextView
            android:text="PowerPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textColor="@color/cast_expanded_controller_text_color"
            android:textSize="36sp"
            android:alpha="0.9"

            android:layout_alignBottom="@+id/imageButton7"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="39dp" />

        <TextView
            android:text="XLR8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            android:textColor="@color/cast_expanded_controller_text_color"
            android:textSize="36sp"
            android:alpha="0.9"
            android:layout_alignTop="@+id/imageButton8"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="47dp" />


        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:srcCompat="@drawable/dsd"
            android:id="@+id/imageButton"
            android:alpha="0.8"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/imageButton7"
            android:layout_alignParentStart="true"
            android:onClick="md" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/imageButton9"
            android:background="@drawable/wq"
            android:alpha="0.6"
            android:layout_marginTop="133dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:onClick="lp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/blog_banner"
            android:alpha="0.7"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="LetsPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textColor="@color/cast_expanded_controller_text_color"
            android:textSize="36sp"
            android:alpha="0.9"
            android:layout_marginBottom="48dp"
            android:layout_above="@+id/imageButton7"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif" />

        <TextView
            android:text="MatchDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:textColor="@color/cast_expanded_controller_text_color"
            android:textSize="36sp"
            android:alpha="0.9"
            android:layout_marginBottom="46dp"
            android:layout_above="@+id/imageButton8"
            android:layout_alignEnd="@+id/textView2" />

        <TextView
            android:text="Football"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textColor="@android:color/background_light"
            android:textSize="46sp"
            android:alpha="0.7"
            android:fontFamily="cursive"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>
    </ScrollView>
</RelativeLayout>
